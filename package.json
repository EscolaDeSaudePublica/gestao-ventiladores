{
  "name": "gestao-ventiladores-front",
  "homepage": "https://gestao-ventiladores.dev.org.br/",
  "version": "1.1.2",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --verbose --watch",
    "test:coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@date-io/date-fns": "^2.6.1",
    "@material-ui/core": "^4.9.8",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.49",
    "@material-ui/pickers": "^3.2.10",
    "@reach/router": "^1.3.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.21.1",
    "date-fns": "^2.13.0",
    "history": "^4.10.1",
    "moment": "^2.24.0",
    "moment-locales-webpack-plugin": "^1.2.0",
    "moment-timezone": "^0.5.28",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-autocomplete": "^1.8.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.4.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "react-simple-dropdown": "^3.2.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "gh-pages": "^2.2.0",
    "husky": "4.2.5",
    "jest-transform-stub": "2.0.0",
    "lint-staged": "^10.1.7",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "react-test-renderer": "^16.13.1"
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint src/*.js --fix-dry-run"
    ]
  },
  "jest": {
    "transform": {
      ".+\\.(css|scss|png|jpg)$": "jest-transform-stub",
      "^.+\\.(js|jsx)?$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10"
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && pretty-quick --staged",
      "pre-push": "npm test"
    }
  }
}
